{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "react-hooks"
  ],
  "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive=dpes": "warn",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
  }, // <--- Adicione uma vÃ­rgula aqui
  "settings": {
      "react": {
          "version": "detect"
      }
  }
}
